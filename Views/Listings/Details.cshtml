@model UniThrift.Models.Listing
@using System.Security.Claims

@{
    ViewData["Title"] = Model.Title;
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isOwner = Model.UserId == currentUserId;
}

<div class="container mt-4">
    <div class="row">
        <!-- Image -->
        <div class="col-md-5">
            <img src="@Model.ImagePath"
                 alt="@Model.Title"
                 class="img-fluid rounded"
                 style="max-height: 400px; object-fit: cover; width: 100%; object-fit: contain;" />
        </div>

        <!-- Info -->
        <div class="col-md-7">
            <h2>@Model.Title</h2>
            <h5 class="text-muted">@Model.Category?.Name</h5>

            <h3 class="mt-3">$@Model.Price</h3>

            <p class="text-secondary mt-2">
                <strong>Campus:</strong> @Model.Campus
            </p>

            <p class="text-secondary">
                <strong>Posted:</strong> @Model.CreatedAt.ToLocalTime().ToString("MMM d, yyyy h:mm tt")
            </p>

            <hr />

            <h5>Description</h5>
            <p>@Model.Description</p>

            <hr />

            @* CONTACT SELLER SECTION *@
            @if (!isOwner && Model.User != null)
            {
                if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="mt-3">
                        <p><strong>Seller:</strong> @Model.User.Email</p>
                        <a class="btn btn-primary"
                           href="mailto:@Model.User.Email?subject=Interested in your UniThrift listing: @Model.Title">
                            Contact Seller
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-muted mt-3">
                        <a asp-area="Identity" asp-page="/Account/Login">Log in</a> to contact the seller.
                    </p>
                }
            }
            else if (isOwner)
            {
                <p class="text-muted mt-3">
                    You posted this listing.
                </p>
            }

            @if (isOwner)
            {
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </div>
            }

            <a asp-action="Index" class="btn btn-link mt-4">Back to Listings</a>
        </div>
    </div>
</div>
