@using UniThrift.Models
@model IEnumerable<UniThrift.Models.Listing>
<link rel="stylesheet" href="~/css/listings,css"/>

@{
    ViewData["Title"] = "Browse Listings";
}

<h1>Shop</h1>
<h2>Latest Items</h2>

<p><a asp-controller="Create">Create</a></p>

<div class="listing-grid">
    @foreach (var item in Model) 
    {
        <div class="listing-card">
            <img src="https://via.placeholder.com/300x180?text=No+Image" alt="Listing Image" /> <!--Add image url -->
            <h4>@item.Title</h4>
            <p class="text-muted">@item.Category?.Name</p>
            <p><strong>$@item.Price</strong></p>
            <p class="small">@item.Campus</p>
            <a asp-action="Details" asp-route-id="@item.Id" class="">View</a>
        </div>
    }
</div>


