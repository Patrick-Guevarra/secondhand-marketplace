@using UniThrift.Models
@model IEnumerable<UniThrift.Models.Listing>

@{
    ViewData["Title"] = "Browse Listings";
}

<div class="page-heading">
    <div>
        <h2>Shop</h2>
        <p class="text-muted">Latest items from your campus community.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary create-btn">Create Listing</a>
</div>

@{
    var categories = (IEnumerable<Category>)ViewBag.Categories;
}

<!-- search/filter bar uses GET -->
<form asp-action="Index" method="get" class="listing-search">
    <input type="search"
           name="query"
           value="@ViewBag.Query"
           placeholder="Search title or description" />

    <select name="categoryId">
        <option value="">All categories</option>
        @foreach (var cat in categories)
        {
            if ((string?)ViewBag.CategoryId == cat.CategoryId)
            {
                <option value="@cat.CategoryId" selected>@cat.Name</option>
            }
            else
            {
                <option value="@cat.CategoryId">@cat.Name</option>
            }
        }
    </select>

    <input type="text"
           name="campus"
           value="@ViewBag.Campus"
           placeholder="Campus (optional)" />

    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="listing-grid">
    @foreach (var item in Model) 
    {
        <div class="listing-card">
            <img src="@item.ImagePath" alt="Listing Image" /> 
            <h4>@item.Title</h4>
            <p class="text-muted">@item.Category?.Name</p>
            <p class="price"><strong>$@item.Price</strong></p>
            <p class="small">@item.Campus</p>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-light btn-sm view-btn">View</a>
        </div>
    }
</div>
