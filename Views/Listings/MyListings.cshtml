@model IEnumerable<UniThrift.Models.Listing>

@{
    ViewData["Title"] = "My Listings";
}

<div class="page-heading">
    <div>
        <h2>@ViewData["Title"]</h2>
        <p class="text-muted">Manage and update your active listings.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary create-btn">Create New Listing</a>
</div>

<div class="listing-grid">
    @foreach (var item in Model)
    {
        <div class="listing-card">
            <img src="@item.ImagePath" alt="@item.Title" />

            <h4>@item.Title</h4>
            <p class="text-muted">@item.Category?.Name</p>
            <p><strong>$@item.Price</strong></p>
            <p class="small">@item.Campus</p>

            <div class="mt-2">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                    Edit
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                    Delete
                </a>
            </div>
        </div>
    }
</div>
