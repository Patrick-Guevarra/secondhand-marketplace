@model UniThrift.Models.Listing

@{
    ViewData["Title"] = "Delete Listing";
}

<h2>Delete Listing</h2>

<h4>Are you sure you want to delete this listing?</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">$@Model.Price</dd>

            <dt class="col-sm-3">Campus</dt>
            <dd class="col-sm-9">@Model.Campus</dd>

            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                <img src="@Model.ImagePath" alt="@Model.Title" style="max-width: 200px; border-radius: 8px;" />
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="MyListings" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
